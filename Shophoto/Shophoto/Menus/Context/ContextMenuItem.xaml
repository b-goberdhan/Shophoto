<UserControl x:Class="Shophoto.Menus.Context.ContextMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Shophoto.Menus.Context"
             xmlns:buttons="clr-namespace:Shophoto.Buttons"
             mc:Ignorable="d">
    <buttons:IconButton Content="{Binding Name, FallbackValue=Edit}"
                        BorderBrush="Gray" BorderThickness="0,0,0,1"
                        Background="WhiteSmoke"
                        FontSize="15"
                        Command="{Binding OnClick}"
                        Width="100" Height="30">
    </buttons:IconButton>
</UserControl>
